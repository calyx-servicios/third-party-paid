<?xml version="1.0"?>
<odoo>
    <data>
    	<record id="view_purchase_requisition_form"	model="ir.ui.view">
			<field name="name">purchase.requisition.form</field>
			<field name="model">purchase.requisition</field>
			<field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
			<field name="arch" type="xml">
				<header>
						<button name="action_compare" string="Analyze RFQ" type="object" attrs="{'invisible': ['|','|','|','|',('state', '=', 'draft'),('state', '=', 'in_progress'),('state', '=', 'done'),('state', '=', 'cancel')], 'required': [('state', '=','open')]}" class="btn-primary"/>
				</header>
				
			</field>
		</record>

		<record id="view_purchase_order_form_id" model="ir.ui.view">
			<field name="name">purchase.order.line.tree</field>
			<field name="model">purchase.order.line</field>
			<field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='date_planned']" position="replace">
					<field name="state_id"/>
                <button string="Add Quantity" icon="fa-shopping-cart" name="action_add_quantity" aria-label="Sort" type="object"/>
                <button string="Confirm Order" icon="fa-check" name="action_add_confirm" aria-label="Sort" type="object"/>
                <button string='Cancel' icon="fa-times" name="action_cancel" help="Cancel" aria-label="Sort" type="object"/></xpath>

                <xpath expr="//tree" position="attributes">

				    <attribute name="decoration-danger">state_id == 'new_cancel'</attribute>
				   <attribute name="decoration-success">state_id == 'confirm'</attribute>

				</xpath>	
			</field>
		</record>
         
    </data>
</odoo>