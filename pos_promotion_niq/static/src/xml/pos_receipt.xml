<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PosTicket">
        <t t-jquery=".receipt-orderlines" t-operation="replace">
            <table class='receipt-orderlines'>
                <colgroup>
                    <col width='50%' />
                    <col width='25%' />
                    <col width='25%' />
                </colgroup>
                <tr t-foreach="orderlines" t-as="orderline">
                    <td>
                        <t t-esc="orderline.get_product().display_name"/>
                         <t t-if="orderline.get_discount() > 0">
                            <div class="pos-disc-font">
                                With a <t t-esc="orderline.get_discount()"/>% discount
                            </div>
                        </t>
                        <t t-if="orderline.get_promo_disc_percentage() > 0">
                            <div class="pos-disc-font">
                                With a <t t-esc="orderline.get_promo_disc_percentage()"/>% promotion discount
                            </div>
                        </t>
                        <t t-if="orderline.get_promo_disc_amount() > 0">
                            <div class="pos-disc-font">
                                With discount <t t-esc="widget.format_currency(orderline.get_promo_disc_amount())"/>
                            </div>
                        </t>
                        <t t-if="orderline.get_promo_fixed_price() > 0">
                            <div class="pos-disc-font">
                                With fixed price <t t-esc="widget.format_currency(orderline.get_promo_fixed_price())"/>/<t t-esc="orderline.get_unit().name" />
                            </div>
                        </t>
                        <t t-if="orderline.get_promo_get_free() > 0">
                            <div class="pos-disc-font">
                                Get free with original price <t t-esc="widget.format_currency(orderline.get_origin_price())"/>/<t t-esc="orderline.get_unit().name" />
                            </div>
                        </t>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="orderline.get_quantity_str_with_unit()"/>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                    </td>
                </tr>
            </table>
        </t>


    </t>

</templates>
