<odoo>
  <data>
    <!-- explicit tree view definition -->
    <record model="ir.ui.view" id="melisync.publications_variants_tree_view">
      <field name="name">MercadoLibre melisync.publications_variants tree view</field>
      <field name="model">melisync.publications.variants</field>
      <field name="arch" type="xml">
        <tree>
            <field name="publication_id" />
            <field name="variant_id" />
            <field name="meli_id" />
            <field name="meli_image_id" />
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="melisync.publications_variants_form_view">
      <field name="name">MercadoLibre melisync.publications_variants form view</field>
      <field name="model">melisync.publications.variants</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="publication_id" />
              <field name="variant_id" />
              <field name="meli_id" />
              <field name="meli_image_id" />
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>