<odoo>
    <data>
      <!-- Pricelist view -->
      <record model="ir.ui.view" id="melisync.menu_product_pricelist_view_tree">
        <field name="name">MercadoLibre product pricelist tree view</field>
        <field name="model">product.pricelist</field>
        <field name="arch" type="xml">
          <tree delete="false" duplicate="0" string="MercadoLibre pricelists">
            <field name="name" />
          </tree>
        </field>
      </record>
      <!-- Extends product.pricelist form view -->
      <record model="ir.ui.view" id="melisync.menu_product_pricelist_form_inherit">
        <field name="name">MercadoLibre product pricelist form inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
          <xpath expr="//group[@name='pricelist_settings']" position="inside">
            <div colspan="2" attrs="{ 'invisible': [('meli_list', '=', False)]}">
              <field name="meli_list" nolabel="1" attrs="{ 'readonly': True }" />
              <label for="meli_list" attrs="{ 'readonly': True }" />
            </div>
          </xpath>
        </field>
      </record>
      <!-- Action -->
      <record id="melisync.menu_product_pricelist_action_tree" model="ir.actions.act_window">
        <field name="name">MercadoLibre Pricelists</field>
        <field name="res_model">product.pricelist</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="melisync.menu_product_pricelist_view_tree"/>
        <field name="type">ir.actions.act_window</field>
        <field name="domain">[('meli_list', '=', True)]</field>
      </record>
      <!-- Menu items -->
      <menuitem name="Pricelists" parent="melisync.menu_sales" id="melisync.menu_product_pricelists" action="melisync.menu_product_pricelist_action_tree" groups="melisync.res_groups_sales_administrator" sequence="1"/>
    </data>    
</odoo>