<odoo>
  <data>
    <!-- explicit tree view definition -->
    <record model="ir.ui.view" id="melisync.categories_tree_view">
      <field name="name">MercadoLibre melisync.categories tree view</field>
      <field name="model">melisync.categories</field>
      <field name="arch" type="xml">
        <tree default_order="name asc" create="false" edit="false" delete="false" duplicate="0">
            <field name="site_id" />
            <field name="categ_id" />
            <field name="name" />
            <field name="parent_id_instance" />
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="melisync.categories_form_view">
      <field name="name">MercadoLibre melisync.categories form view</field>
      <field name="model">melisync.categories</field>
      <field name="arch" type="xml">
        <form create="false" edit="false" delete="false" duplicate="0">
          <sheet>
            <div class="oe_button_box" name="button_box">
                <button type="object" name="view_childrens" string="View childrens" help="View children categories." attrs="{ 'invisible': [('have_childrens', '=', False)] }" class="oe_stat_button" icon="fa-bars" />
                <button type="object" name="sync_childrens" string="Synchronize childrens" help="Download all children categories." class="oe_stat_button" icon="fa-cloud-download" />
                <button type="object" name="sync_attributes" string="Synchronize attributes" help="Download all children attributes." class="oe_stat_button" icon="fa-chain-broken" />
            </div>
            <group string="Category data">
              <field name="parent_id" attrs="{ 'invisible': True }" />
              <field name="site_id" attrs="{ 'readonly': True }" options="{ 'no_open': True }" />
              <field name="categ_id" attrs="{ 'readonly': True }" />
              <field name="name" attrs="{ 'readonly': True }" />
              <field name="parent_id_instance" attrs="{ 'readonly': True, 'invisible': [('parent_id', '=', False )] }" />
            </group>
            <group string="Attributes" attrs="{ 'invisible': [('attribute_ids', '=', [])]}">
                <field name="attribute_ids" nolabel="1">
                  <tree decoration-warning="is_required" default_order="is_required desc, meli_id asc" create="false" edit="false" delete="false" duplicate="0">
                    <field name="is_required" attrs="{ 'column_invisible': True }" />
                    <field name="meli_id" string="Attribute ID" />
                    <field name="name" string="Attribute name" />
                    <field name="tag_ids" string="Tags" widget="many2many_tags" />
                  </tree>
                </field>
            </group>
          </sheet>
          <field name="have_childrens" attrs="{ 'invisible': True }" />
        </form>
      </field>
    </record>
    
    <!-- search view definition -->
    <record model="ir.ui.view" id="melisync.categories_search_view">
        <field name="name">MercadoLibre categories Search view</field>
        <field name="model">melisync.categories</field>
        <field name="arch" type="xml">
            <search string="Search category">
                <field string="Name" name="name" domain="[('name', 'ilike', self)]"/>
                <field string="ID" name="categ_id" domain="[('categ_id', 'ilike', self)]"/>
                <field string="Site ID" name="site_id" domain="[('site_id', 'ilike', self)]"/>
                <field string="Parent ID" name="parent_id" domain="[('parent_id.name', 'ilike', self)]"/>
                <separator />
                <group expand="0" name="group_by" string="Group by">
                    <filter string="Site ID" name="site_id" context="{'group_by': 'site_id' }" />
                    <filter string="Parent ID" name="parent_id_instance" context="{'group_by': 'parent_id' }" />
                </group>
            </search>
        </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="melisync.categories_act_window">
      <field name="name">MercadoLibre categories</field>
      <field name="res_model">melisync.categories</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="melisync.categories_search_view" />
    </record>

    <!-- Menu items -->
    <menuitem name="Categories" parent="melisync.menu_categories" id="melisync.menu_categories_tree" action="melisync.categories_act_window" groups="melisync.res_groups_products_moderator" sequence="999"/>
  </data>
</odoo>