<odoo>
  <data>
    <!-- explicit tree view definition -->
    <record model="ir.ui.view" id="melisync.shipping_methods_view_tree">
      <field name="name">MercadoLibre shipping.methods View Tree</field>
      <field name="model">melisync.shipping.methods</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false" delete="false" duplicate="0" string="Shipping methods">
            <field name="company_name" />
            <field name="name" />
            <field name="delivery_type" />
            <field name="deliver_to" />
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="melisync.shipping_methods_view_form">
      <field name="name">MercadoLibre shipping.methods View Form</field>
      <field name="model">melisync.shipping.methods</field>
      <field name="arch" type="xml">
        <form create="false" edit="false" duplicate="0" delete="false" string="Shipping method">
          <sheet>
            <group>
              <group string="Method description">
                  <field name="site_id" />
                  <field name="name" />
                  <field name="method_id" />
                  <field name="currency_id" />
              </group>
              <group string="Company info">
                  <field name="company_id" />
                  <field name="company_name"/>
              </group>
            </group>
            <group>
              <group string="Method options">
                  <field name="shipping_modes" widget="many2many_tags" />
                  <field name="shipping_methods_options_free" widget="many2many_tags" />
              </group>
              <group string="Delivery">
                  <field name="delivery_type" />
                  <field name="deliver_to" />
                  <field name="min_time" />
                  <field name="max_time" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- search view definition -->
    <record model="ir.ui.view" id="melisync.shipping_methods_search_view">
        <field name="name">MercadoLibre shipping.methods Search View</field>
        <field name="model">melisync.shipping.methods</field>
        <field name="arch" type="xml">
            <search string="Search shipping methods">
                <field string="Method ID" name="method_id" domain="[('method_id', 'ilike', self)]"/>
                <field string="Name" name="name" domain="[('name', 'ilike', self)]"/>
                <field string="Shipping modes" name="shipping_modes" domain="[('shipping_modes', 'ilike', self)]"/>
                <field string="Delivery type" name="delivery_type" domain="[('delivery_type', 'ilike', self)]"/>
                <field string="Deliver to" name="deliver_to" domain="[('deliver_to', 'ilike', self)]"/>
                <field string="Currency id" name="currency_id" domain="[('currency_id', 'ilike', self)]"/>
                <field string="Company ID" name="company_id" domain="[('company_id', 'ilike', self)]"/>
                <field string="Company name" name="company_name" domain="[('company_name', 'ilike', self)]"/>
                <separator />
                <group expand="0" name="group_by" string="Group by">
                    <filter string="Delivery type" name="delivery_type" context="{'group_by': 'delivery_type' }" />
                    <filter string="Deliver to" name="deliver_to" context="{'group_by': 'deliver_to' }" />
                    <filter string="Currency ID" name="currency_id" context="{'group_by': 'currency_id' }" />
                </group>
            </search>
        </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="melisync.shipping_methods_act_window">
      <field name="name">Shipping methods</field>
      <field name="res_model">melisync.shipping.methods</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="melisync.shipping_methods_search_view" />
    </record>
  </data>
</odoo>