<odoo>
    <data>
        <!-- Define product.attribute.value form view -->
        <record model="ir.ui.view" id="melisync.product_attribute_value_view_form">
            <field name="name">MercadoLibre product.attribute.value form inherit</field>
            <field name="model">product.attribute.value</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Attribute value">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="attribute_id" />
                            <field name="is_used_on_products" />
                            <field name="html_color" />
                        </group>
                        <group>
                            <field name="sequence" />
                            <field name="is_custom" />
                            <field name="display_type" attrs="{ 'readonly': True }" />
                            <field name="pav_attribute_line_ids" widget="many2many_tags" attrs="{ 'readonly': True, 'invisible': [('pav_attribute_line_ids', '=', [])] }" />
                        </group>
                    </group>
                    <group string="Meli info" colspan="2">
                        <field name="meli_id" attrs="{ 'readonly': True }" />
                        <field name="parent_id" options="{ 'no_create_edit': True, 'no_create': True }" context="{ 'show_attr_name': True }" />
                        <field name="child_ids" widget="many2many_tags" attrs="{ 'readonly': True, 'invisible': [('child_ids', '=', [])] }" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>