<odoo>
    <data noupdate="1">
		<record model="ir.cron" id="melisync.ir_cron_sync_all_sales">
			<field name="name">MercadoLibre - All instances sync sales</field>
			<field name="model_id" ref="melisync.model_melisync_settings" />
			<field name="state">code</field>
			<field name="code">model._sync_all_sales()</field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
            <field name="doall" eval="False" />
			<field name="active" eval="True" />
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now().replace(hour=6, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
		</record>
