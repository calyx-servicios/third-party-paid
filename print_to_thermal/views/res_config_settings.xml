<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.sale</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="101"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="Thermal Printers" string="Thermal Printers" data-key="print_to_thermal" >
          <div >
            <h2>Printers</h2>
            <div class="row mt16 o_settings_container">
              <div class="col-xs-12 col-md-6 o_setting_box" id="default_printer">
                <div class="o_setting_left_pane" />
                <div class="o_setting_right_pane" name="default_printer_pane">
                    <label string="Default Printer" for="thermal_default_printer"/>
                    <field name="thermal_default_printer" class="in_line"/>
                    <div class="text-muted">
                       Default Active Printer
                    </div>
                </div>
              </div>
              <div class="col-xs-12 col-md-6 o_setting_box" id="printer_urls">
                <div class="o_setting_left_pane" />
                <div class="o_setting_right_pane" name="printer_urls_pane">
                  <label string="Printers Urls" for="printer_urls"/>
                  <field name="printer_urls" class="in_line"/>
                  <div class="text-muted">
                     Printers Urls separate with coma, ie.: 192.168.0.22,printer.domain.tl, 127.0.0.1
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-md-6 o_setting_box" id="time_alive_printer">
                <div class="o_setting_left_pane">
                    <field name="time_alive_printer" />
                </div>
                <div class="o_setting_right_pane" name="tine_alive_pane">
                    <label string="Time Printer alive [s]" for="time_alive_printer"/>
                    <div class="text-muted">
                       Time interval to keep printer alive
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>
