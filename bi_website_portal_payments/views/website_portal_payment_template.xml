<odoo>
    
    <template id="portals_payment_frontend" inherit_id="website.assets_frontend"
        name="Payment Portal Frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/bi_website_portal_payments/static/src/js/pay_multiple_partial_payment.js"></script>
        </xpath>
    </template>

    <template id="bi_portal_my_invoices" inherit_id="account.portal_my_invoices" name="My Invoices and Payments">
        <xpath expr="//t[@t-call='portal.portal_table']" position="before">
            <div class="clearfix"> 
                <form t-attf-action="/my/invoices/multiple/payment/" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                    <input type="hidden" id="invoice_ids" name="invoice_ids" t-att-value="[]" />
                    <button type="submit" id="pay_multiple_partial" class="btn btn-xs btn-primary">
                        <i class="fa fa-arrow-circle-right"/> Pay Multiple Invoices 
                    </button>
                </form>
            </div>
        </xpath>
        
        <xpath expr="//t[@t-call='portal.portal_table']/thead/tr/th[last()]" position="before">
            <th></th>
        </xpath>
        
        <xpath expr="//t[@t-foreach='invoices']/tr/td[last()]" position="before">
            <td>
                <form t-attf-action="/my/invoices/partial/#{invoice.id}"
                    method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                    <input name="invoice_id" t-att-value="invoice.id" type="hidden" />
                    <button type="submit" t-if="invoice.state == 'posted' and invoice.invoice_payment_state == 'not_paid' and invoice.amount_total and invoice.type == 'out_invoice' and (pending_manual_txs or not tx_ids)" t-att-id="'pay_partial_%s' % invoice.id" class="btn btn-xs btn-primary">Pay Partial</button>
                </form>
            </td>
        </xpath>

        <xpath expr="//thead/tr/th[1]" position="before">
            <th></th>
        </xpath>
        <xpath expr="//t[@t-foreach='invoices']/tr/td[1]" position="before">
            <t t-if="invoice.state == 'posted' and invoice.invoice_payment_state == 'not_paid' and invoice.amount_total and invoice.type == 'out_invoice' and (pending_manual_txs or not tx_ids)">
                <td>
                    <input type="checkbox" t-att-value="'%s' % (invoice.id)" style="vertical-align: text-bottom;" id="is_checked"/>
                </td>
            </t>
            <t t-else="">
                <td></td>
            </t>
        </xpath>
    </template>

    <template id="pay_multiple_payment" name="Partial Payment">
        <t t-call="website.layout">
            <t t-set="additional_title">Multiple Invoice Payment</t>
            <div id="wrap">
                <div class="container oe_website_sale">
                    <div class="container">
                        <div class="ml2 mt2">
                            <br/>
                            <h3>Pay Multiple Invoices</h3>
                        </div>
                    </div>
                    <hr/>
                    <t t-if="invoices">
                        <form id="createInvoiceMultiForm">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                            <div class="row">
                                <div class="col-md-12 oe_cart">
                                    <div class="row">
                                        <div class="form-group col-md-10">
                                            <div class="col-md-3">
                                                <label class="control-label"> Invoices References : </label>
                                            </div>
                                            <div class="col-md-7">
                                                <!-- <div style="border:1px solid"> -->
                                                    <span t-esc="invoice_num" style="font-size: 20px;font-weight: 400;white-space: pre-wrap;word-break: break-word;" />
                                                    <input name="invoice_num" t-att-value="invoice_num" type="hidden"/>
                                                    <input name="invoice" t-att-value="invoice.id" type="hidden" />
                                                <!-- </div> -->
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div t-attf-class="form-group #{error and 'amount' in error and 'has-error' or ''} col-md-6">
                                            <label class="col-md-3 col-sm-4 control-label" for="name">Payment Amount :
                                            </label>
                                            <div class="col-md-7 col-sm-8">
                                                <input type="number" step="any" min="0" class="form-control" name="amount" id="payment_amount" required="True"/>
                                            </div>
                                        </div>
                                        <div t-attf-class="form-group col-md-6">
                                            <label class="col-md-3 col-sm-4 control-label" for="name">Total Payable Amount :
                                            </label>
                                            <div class="col-md-7 col-sm-8" style="font-size: x-large;">
                                                <t t-esc="total_amount"/>
                                                <input name="total_amount" t-att-value="total_amount" type="hidden" id="total_amount" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input name="invoice_ids" t-att-value="invoices" id="payment_invoices" type="hidden"/>
                                        </div>
                                    </div>
                                    <div class="row" style="padding-left: 10px;">
                                        <input type="submit" value="Pay Now" class="btn btn-primary" icon="fa fa-fw fa-arrow-circle-right" data-toggle="modal"> </input>
                                    </div>                                         
                                </div>
                            </div>
                        </form>
                        <div class="row" t-if="not tx_ids and invoice.state == 'posted' and invoice.invoice_payment_state == 'not_paid' and invoice.amount_total" id="portal_pay">
                            <div class="modal fade" id="pay_with_multi_partial" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h3 class="modal-title">Pay with</h3>
                                            <button type="button" class="close" data-dismiss="modal">&amp;times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <div t-if="pms or acquirers" id="payment_method" class="text-left col-md-13">
                                                <t t-call="payment.payment_tokens_list">
                                                    <t t-set="mode" t-value="'payment'"/>
                                                    <t t-set="partner_id" t-value="invoice.partner_id.id if request.env.user._is_public() else request.env.user.partner_id.id"/>
                                                    <t t-set="success_url" t-value="invoice.get_portal_url()"/>
                                                    <t t-set="error_url" t-value="invoice.get_portal_url()"/>
                                                    <t t-set="access_token" t-value="access_token or ''"/>
                                                    <t t-set="callback_method" t-value="''"/>
                                                    <t t-set="prepare_tx_url" t-value="'/my/invoices/transaction/multi/' + str(invoice.id)"/>
                                                    <t t-set="form_action" t-value="'/my/invoices/token/multi/' + str(invoice.id)"/>
                                                    <t t-set="submit_txt">Pay Now</t>
                                                    <t t-set="icon_class" t-value="'fa-lock'"/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <p></p>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    Please select invoices to pay partially at once....!!!
                                    <button type="button" class="close" data-dismiss="alert">&amp;times;
                                    </button>                                    
                                </div>
                                <a href="/my/home" >
                                    <button class="btn btn-primary float-right"><i class="fa fa-home" /> 
                                        Go Back
                                    </button>
                                </a>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>


    <template id="pay_portal_payment">
