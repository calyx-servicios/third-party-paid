<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_order_magento_form">
        <field name="name">sale.view.order.inherit.magento.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
           <data>
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="magento_shop_id" attrs="{'invisible':[('magento_order','=',False)]}"/>
                <field name="order_status" attrs="{'invisible':[('magento_order','=',False)]}"/>
                <field name="ma_order_id" attrs="{'invisible':[('magento_order','=',False)]}"/>
                <field name="invoiced" invisible="1"/>
                <field name="shipped" invisible="1"/>
                <field name="magento_order" invisible="1"/>
                <field name="entity_id"/>
                <field name="payment_method"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='order_line']/form" position="inside">
                <notebook invisible="1">
                    <page string="Magento Details">
                        <group>
                            <field name="entity_id"/>
                            <field name="order_item_id"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
            
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="magento_shop_id" attrs="{'invisible':[('magento_order','=',False)]}"/>
            </xpath>
          </data>
       </field>
    </record>

    <record model="ir.ui.view" id="view_order_magento_tree">
        <field name="name">sale.view.order.inherit.magento.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="magento_order" attrs="{'invisible':[('magento_order','=',False)]}"/>
                    <field name="invoiced" attrs="{'invisible':[('magento_order','=',False)]}"/>
                    <field name="shipped" attrs="{'invisible':[('magento_order','=',False)]}"/>
                    <field name="magento_shop_id" attrs="{'invisible':[('magento_order','=',False)]}"/>
                    <field name="magento_order" invisible="1"/>
                    <field name="order_status" attrs="{'invisible':[('magento_order','=',False)]}"/>
                </xpath>
          </data>
       </field>
    </record>

    <record model="ir.ui.view" id="view_quotation_order_magento_tree">
        <field name="name">sale.view.quotation.order.inherit.magento.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="magento_shop_id" attrs="{'invisible':[('magento_order','=',False)]}"/>
                    <field name="order_status" attrs="{'invisible':[('magento_order','=',False)]}"/>
                    <field name="magento_order" invisible="1"/>
                </xpath>
          </data>
       </field>
    </record>
    
    
    <record id="gt_action_orders_magento" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        <field name="domain">[('mage_order_id', '!=', 'NULL')]</field>
        <field name="context">{
                'search_default_my_sale_orders_filter': 1
            }
        </field>
    </record>


    <record id="gt_action_orders_magento_completed" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        <field name="domain">[('state','=','done'),('mage_order_id', '!=', 'NULL')]</field>
        <field name="context">{
                'search_default_my_sale_orders_filter': 1
            }
        </field>
    </record>

    <record id="gt_action_orders_magento_pending" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        <field name="domain">[('state','!=','done'),('mage_order_id', '!=', 'NULL')]</field>
        <field name="context">{
                'search_default_my_sale_orders_filter': 1
            }
        </field>
    </record>
</odoo>