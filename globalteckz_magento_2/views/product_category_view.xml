<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_category_magento_form">
        <field name="name">product.category.magento.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="magento_id"/>
                <field name="magento_instance_id"/>
                <field name="shop_id"/>
                <field name="category_exported"/>    
            </xpath>
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="GtExportMagentoCategory" string="Export Category" type="object"
                    attrs="{'invisible':[('category_exported','=', True)]}"/>
<!--                    <button name="update_category" string="Export Category" type="object"
                    attrs="{'invisible':[('category_exported','=', False)]}"/>-->
                </header>
            </xpath>
        </field>
    </record>
</odoo>