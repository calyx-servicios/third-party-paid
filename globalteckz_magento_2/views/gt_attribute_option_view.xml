<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="gt_product_attribute_options_form">
        <field name="name">gt.product.attribute_options.form</field>
        <field name="model">gt.product.attribute.options</field>
        <field name="arch" type="xml">
            <form string="Magento Product Attribute Options" create="false">
                <group col="4" colspan="4">
                    <field name="attribute_id"/>
                    <field name="product_attr_value"/>
                    <field name="attribute_name" invisible="True" />
                    <field name="label" />
                    <field name="value" />
                    <field name="referential_id"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="gt_product_attribute_options_tree">
        <field name="name">gt.product_attribute_options.tree</field>
        <field name="model">gt.product.attribute.options</field>
        <field name="arch" type="xml">
            <tree string="Magento Product Attribute Options" create="false">
                  <field name="attribute_id"/>
                  <field name="attribute_name" invisible="True" />
                  <field name="label" />
                  <field name="value" />
                  <field name="ipcast"/>
                  <field name="referential_id"/>
            </tree>
        </field>
    </record>
    
    
