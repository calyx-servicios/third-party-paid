<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="gt_magento__store_form_view" model="ir.ui.view">
        <field name="name">Magento Store</field>
        <field name="model">gt.magento.store</field>
        <field name="arch" type="xml">
            <form string="Magento Store View" version="11.0" create="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="ActionGetOrders" type="object" icon="fa-usd">
                            <field string="Orders" name="count_magento_orders" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group  attrs="{'invisible':[('magento_shop','=',False)]}">
                            <field name="name"/>
                            <field name="magento_instance_id"/>
                            <field name="store_id"/>
                            <field name="magento_shop" invisible="1"/>
                            <field name="website_id"/>
                            <field name="code"/>         
                        </group>
                        <group attrs="{'invisible':[('magento_shop','=',False)]}">
                            <field name="prefix"/>      
                            <field name="pricelist_id"/>
                            <field name="warehouse_id"/>
                            <field name="discount_product"/>
                            <field name="shipping_product"/>      
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Actions" attrs="{'invisible':[('magento_shop','=',False)]}" >
                            <group>
                                <group string='Manage Orders'>
                                    <!-- <group>
                                        <button name="GtCreateMagentoOrders" string="Import Order" type="object" class="btn-primary"/>
                                    </group> -->
                                    <!-- <group> -->
                                        <button name="GtCreateMagentoOrders" string="Import Order" type="object" class="btn-primary"/>
                                        <field name="magento_order_date"/>
                                        <field name="magento_order_date_to"/>
                                    <!-- </group> -->
                                </group>
                                <group string="Import Order Status">
                                    <newline/>
                                    <button name="GtCreateMagentoInvoice" string="Import Invoice" type="object" class="btn-primary"/>
                                    <button name="GtCreateMagentoShipment" string="Import Shipment" type="object" class="btn-primary"/>
                                    <newline/>
                                </group>
                                <group string="Export Order Status">
                                    <newline/>
                                    <button name="GtExportMagentoInvoice" string="Export Invoice" type="object" class="btn-primary"/>
                                    <button name="GtExportMagentoShipment" string="Export Shipment" type="object" class="btn-primary"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="gt_magento_shop_tree">
        <field name="name">magento.shop.tree</field>
        <field name="model">gt.magento.store</field>
        <field name="arch" type="xml">
            <tree string="Magento Shop" create="false">
                <field name="name"/>
                <field name="store_id"/>
            </tree>
        </field>
    </record>
    
    <record id="gt_act_magento_shop" model="ir.actions.act_window">
        <field name="name">Magento Shops</field>
        <field name="res_model">gt.magento.store</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="gt_magento_shop_tree"/>
        <field name="domain">[('magento_shop', '=', True)]</field>
    </record> 
</odoo>
