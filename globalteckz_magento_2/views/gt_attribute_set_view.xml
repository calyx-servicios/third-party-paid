<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="gt_product_attribute_set_form">
        <field name="name">magerp.product.attribute_set.form</field>
        <field name="model">gt.product.attribute.set</field>
        <field name="arch" type="xml">
            <form string="Magento Product Attribute Sets" create="false">
                <header>
                    <button name="update_attribute_set" string="Update Attribute Set" type="object" />
                <button name="export_attribute_set" string="Export Attribute Set" type="object" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>		
                            <field name="sort_order"/>
                            <field name="entity_type_id"/>
                            <field name="magento_instance_id"/>
                            <field name="attributes_import" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="attribute_ids">
                                <tree editable="bottom">
                                    <field name="attribute_code"/>
                                    <field name="frontend_input_id"/>
                                    <field name="scope"/>
                                    <field name="magento_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record model="ir.ui.view" id="gt_product_attribute_set_tree">
        <field name="name">magerp.product_attribute_set_greoup.tree</field>
        <field name="model">gt.product.attribute.set</field>
        <field name="arch" type="xml">
            <tree string="Magento Product Attribute Sets" create="false">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="act_gt_product_attribute_set" model="ir.actions.act_window">
        <field name="name">Magento Product Attribute Sets</field>
        <field name="res_model">gt.product.attribute.set</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="gt_product_attribute_set_tree"/>
    </record>
</odoo>
